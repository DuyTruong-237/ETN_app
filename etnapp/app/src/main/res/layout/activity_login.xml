<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/logoLogin"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo1"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoLogin"

        android:layout_centerHorizontal="true"
        android:text="Đăng nhập"
        android:textColor="#4FCCDC"
        android:textSize="30dp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/edtUsername"
        android:hint="ID người dùng"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:drawablePadding="5dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtLogin"
       android:drawableStart="@drawable/rsz_user_login"
        android:drawableTint="#ccc"


        />
    <EditText
        android:id="@+id/edtPass"
        android:hint="Mật khẩu"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:drawablePadding="5dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtUsername"
        android:drawableStart="@drawable/rsz_padlock"
        android:drawableEnd="@drawable/rsz_hidden"
        android:drawableTint="#ccc"


        />
</RelativeLayout>